<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>de.ingrid</groupId>
    <artifactId>ingrid-base-pom</artifactId>
    <version>3.3.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.ingrid.portal</groupId>
  <artifactId>ingrid-portal-project</artifactId>
  <packaging>pom</packaging>
  <version>3.4.0-SNAPSHOT</version>
  <name>Ingrid Portal</name>
  <scm>
    <connection>scm:svn:https://harrison.its-technidata.de/svn/ingrid/ingrid-portal/trunk</connection>
    <developerConnection>scm:svn:https://harrison.its-technidata.de/svn/ingrid/ingrid-portal/trunk</developerConnection>
  </scm>
  <modules>
    <module>ingrid-portal-apps</module>
    <module>ingrid-portal-layout</module>
    <module>ingrid-portal-mdek</module>
    <module>ingrid-portal-base</module>
    <module>ingrid-portal-mdek-application</module>
    <module>ingrid-portal-distribution</module>
  </modules>
	<!-- ==================== DEPENDENCY MANAGEMENT ==================== -->
	<dependencyManagement>
		<dependencies>
            <!-- ADD TO base pom when 3.3.0 RELEASE process finished ! -->
          <dependency>
            <groupId>de.ingrid</groupId>
            <artifactId>ingrid-utils</artifactId>
            <version>3.3.0.1</version>
          </dependency>
		</dependencies>
	</dependencyManagement>
	<!-- ==================== DEPENDENCIES ==================== -->
  <build>
    <finalName>ingrid-portal-project-${version}</finalName>
    <!-- <resources><resource><directory>src/main/resources</directory><excludes><exclude>*.xml</exclude><exclude>*.properties</exclude><exclude>*.bak</exclude></excludes></resource></resources>-->
    <plugins>
      <!-- 
        We need a pregoal when releasing to deploy mdek-application
        since it is needed by portal-mdek and only fetched from repo!
         -->
      <plugin> 
        <groupId>org.apache.maven.plugins</groupId> 
        <artifactId>maven-release-plugin</artifactId> 
        <configuration> 
          <autoVersionSubmodules>true</autoVersionSubmodules> 
          <preparationGoals>clean deploy changes:changes-report wagon:upload -Dproject.url=</preparationGoals>
          <goals>changes:announcement-mail -Dannouncement.runOnlyAtExecutionRoot=true -Dproject.url= --non-recursive</goals>
        </configuration> 
      </plugin>
      <!-- "DISABLE" WAGON PLUGIN TO AVOID EMPTY UPLOAD DIRECTORIES FROM SUBMODULES -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>wagon-maven-plugin</artifactId>
        <configuration>
          <fromDir>NOT_EXISITING_DIRECTORY</fromDir>
          <url>/dev/null</url>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-changes-plugin</artifactId>
        <version>2.9</version>
        <configuration>
          <xmlPath>${basedir}/ingrid-portal-distribution/src/changes/changes.xml</xmlPath>
          <runOnlyAtExecutionRoot>true</runOnlyAtExecutionRoot>
          <smtpHost>localhost</smtpHost>
          <subject>[ingrid update announcement] ${project.artifactId}-${project.version}</subject>
          <mailSender>
            <name>Release Notification</name>
            <email>noreply@wemove.com</email>
          </mailSender>
          <toAddresses>
            <toAddress implementation="java.lang.String">andre.wallat@wemove.com</toAddress>
          </toAddresses>
          <issueManagement>
            <system>JIRA</system>
            <url>http://dev.wemove.com/jira/browse/INGRID</url>
          </issueManagement>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <!-- Repo of parent pom needed, parent pom may not be installed locally yet -->
    <repository>
      <snapshots />
      <id>de.ingrid.all</id>
      <name>Maven Repo InGrid</name>
      <url>http://harrison.its-technidata.de/archiva/repository/ingrid-all</url>
    </repository>
  </repositories>
</project>