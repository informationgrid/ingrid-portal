<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>de.ingrid</groupId>
    <artifactId>ingrid-base-pom</artifactId>
    <version>3.5.0-SNAPSHOT-R304</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.ingrid.portal</groupId>
  <artifactId>ingrid-portal-project</artifactId>
  <packaging>pom</packaging>
  <version>3.5.0-SNAPSHOT-R304</version>
  <name>Ingrid Portal</name>
  <scm>
    <connection>scm:svn:https://harrison.its-technidata.de/svn/ingrid/ingrid-portal/branches/ingrid-portal-3.5_REDMINE-304_JetspeedMigration</connection>
    <developerConnection>scm:svn:https://harrison.its-technidata.de/svn/ingrid/ingrid-portal/branches/ingrid-portal-3.5_REDMINE-304_JetspeedMigration</developerConnection>
  </scm>
  <modules>
    <module>ingrid-portal-apps</module>
    <module>ingrid-portal-layout</module>
    <module>ingrid-portal-mdek</module>
    <module>ingrid-portal-base</module>
    <module>ingrid-portal-mdek-application</module>
    <module>ingrid-portal-distribution</module>
  </modules>

  <properties>
    <org.apache.portals.jetspeed.version>2.3.0-SNAPSHOT</org.apache.portals.jetspeed.version>
<!--
    <org.apache.portals.jetspeed.version>2.2.2</org.apache.portals.jetspeed.version>
-->
  </properties>

    <!-- ==================== DEPENDENCY MANAGEMENT ==================== -->
  <dependencyManagement>
    <dependencies>
<!-- INGRID -->
      <dependency>
        <groupId>de.ingrid</groupId>
        <artifactId>ingrid-portal-utils</artifactId>
        <version>3.5.0-SNAPSHOT-R304</version>
      </dependency>
<!-- JETSPEED -->
<!-- Explicitly use jetspeed dependency management ! So we use the versions jetspeed uses ! -->
      <dependency>
        <groupId>org.apache.portals.jetspeed-2</groupId>
        <artifactId>jetspeed-2</artifactId>
        <version>${org.apache.portals.jetspeed.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
<!-- Then import our ingrid dependency versions ! Only versions not defined yet will be used (former jetspeed import has higher priority) ! -->
      <dependency>
        <groupId>de.ingrid</groupId>
        <artifactId>ingrid-import-pom</artifactId>
        <version>${project.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

	<!-- ==================== DEPENDENCIES ==================== -->
  <dependencies>
    <!-- Provided Dependencies (e.g. needed in portal-base and portal-apps) -->
    <dependency>
      <groupId>org.apache.portals</groupId>
      <artifactId>portlet-api_2.0_spec</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.portals.jetspeed-2</groupId>
      <artifactId>jetspeed-api</artifactId>
      <!-- Set provided in top pom to avoid inclusion in webapp and problems with redundant classes ! -->
      <scope>provided</scope>      
    </dependency>
    <dependency>
      <groupId>org.apache.portals.pluto</groupId>
      <artifactId>pluto-container-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.portals.jetspeed-2</groupId>
      <artifactId>jetspeed-commons</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.geronimo.specs</groupId>
      <artifactId>geronimo-servlet_2.4_spec</artifactId>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <issueManagement>
    <!-- Use JIRA instead of Redmine since the url is wrong generated otherwise! -->
    <system>JIRA</system>
    <url>https://redmine.wemove.com/issues/</url>
  </issueManagement>
  <build>
    <finalName>ingrid-portal-project-${project.version}</finalName>
    <!-- <resources><resource><directory>src/main/resources</directory><excludes><exclude>*.xml</exclude><exclude>*.properties</exclude><exclude>*.bak</exclude></excludes></resource></resources>-->
    <plugins>
      <plugin> 
        <groupId>org.apache.maven.plugins</groupId> 
        <artifactId>maven-release-plugin</artifactId> 
        <configuration> 
          <autoVersionSubmodules>true</autoVersionSubmodules> 
          <!-- We do NOT call changes:... goals during release:prepare cause changes plugin is only executed on top and later clean in submodule would delete report ! -->
          <!-- Instead changes:changes-report is bound to deploy phase in distribution submodule ! This way we generate report with every deploy ! -->
          <!-- And changes:announcement-mail is only executed on top to avoid errors in submodules without changes plugin ! -->
          <preparationGoals>clean deploy wagon:upload -Dproject.url=</preparationGoals>
          <!-- Calls top changes plugin which is not calling submodules ! -->
          <goals>changes:announcement-mail -Dannouncement.runOnlyAtExecutionRoot=true -Dproject.url= --non-recursive</goals>
        </configuration> 
      </plugin>
      <!-- "DISABLE" WAGON PLUGIN TO AVOID EMPTY UPLOAD DIRECTORIES FROM SUBMODULES -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>wagon-maven-plugin</artifactId>
        <configuration>
          <fromDir>NOT_EXISITING_DIRECTORY</fromDir>
          <url>/dev/null</url>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-changes-plugin</artifactId>
        <version>2.9</version>
        <configuration>
          <xmlPath>${basedir}/ingrid-portal-distribution/src/changes/changes.xml</xmlPath>
          <outputDirectory>ingrid-portal-distribution/target/site</outputDirectory>
          <templateOutputDirectory>ingrid-portal-distribution/target/site</templateOutputDirectory>
          <!-- Only run at root to avoid errors when calling changes:announcement-mail in submodules ! -->
          <runOnlyAtExecutionRoot>true</runOnlyAtExecutionRoot>
          <smtpHost>localhost</smtpHost>
          <subject>[ingrid update announcement] ${project.artifactId}-${project.version}</subject>
          <mailSender>
            <name>Release Notification</name>
            <email>noreply@wemove.com</email>
          </mailSender>
          <toAddresses>
            <toAddress implementation="java.lang.String">ingrid-announcement@wemove.com</toAddress>
          </toAddresses>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <!-- Repo of parent pom needed, parent pom may not be installed locally yet -->
    <repository>
      <snapshots />
      <id>de.ingrid.all</id>
      <name>Maven Repo InGrid</name>
      <url>http://harrison.its-technidata.de/archiva/repository/ingrid-all</url>
    </repository>
  </repositories>
</project>