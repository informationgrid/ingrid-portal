<!-- These beans provide an authentication without the use of a portal
     and allow the management of users and all connected catalogues. -->
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:util="http://www.springframework.org/schema/util" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
                http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
                http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">
    
    <bean id="userRepoManager" class="de.ingrid.mdek.userrepo.DbUserRepoManager">
        <property name="daoFactory"><ref bean="daoFactory" /></property>
    </bean>
    <bean id="authenticationProvider" class="de.ingrid.mdek.security.TomcatAuthenticationProvider">
        <property name="repoManager"><ref bean="userRepoManager" /></property>
    </bean>
    
</beans>