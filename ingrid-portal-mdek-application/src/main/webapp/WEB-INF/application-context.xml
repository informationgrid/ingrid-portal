<beans default-init-method="init" default-destroy-method="destroy" 
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
                http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
                http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">
    <context:component-scan base-package="de.ingrid" />
    
    <!-- Import hibernate bean definitions -->
	<import resource="core-services.xml"/>
    <import resource="external-services.xml"/>
    <import resource="configurations.xml"/>
    
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" id="configuration">
		<property name="locations">
            <list>
                <value>classpath:mdek.properties</value>
                <value>classpath:default-datasource.properties</value>
            </list>
		</property>
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
	</bean>

	<bean id="mdekDataMapper"
		class="de.ingrid.mdek.MdekMapper">
		<property name="sysListMapper">
			<ref bean="sysListMapper" />
		</property>
 	</bean>

    <bean id="snsService" class="de.ingrid.mdek.dwr.services.sns.SNSService">
        <property name="thesaurusService">
            <ref bean="thesaurusService" />
        </property>
        <property name="gazetteerService">
            <ref bean="gazetteerService" />
        </property>
        <property name="fullClassifyService">
            <ref bean="fullClassifyService" />
        </property>
    </bean>
    
	<bean id="ctService" class="de.ingrid.mdek.dwr.services.cts.CoordinateTransformationServiceImpl" />
	<bean id="getCapabilitiesService" class="de.ingrid.mdek.dwr.services.GetCapabilitiesService" />
	<bean id="httpService" class="de.ingrid.mdek.dwr.services.HttpService" />
	<bean id="utilityService" class="de.ingrid.mdek.dwr.services.UtilityServiceImpl" />
	<bean id="versionInformation" class="de.ingrid.mdek.beans.VersionInformation" />

<!-- Syslist cache -->
	<bean id="sysListMapper"
		class="de.ingrid.mdek.SysListCache">
		<property name="connectionFacade">
			<ref bean="connectionFacade" />
		</property>
	</bean>

<!-- Utility Classes -->
	<bean id="mdekObjectUtils"
		class="de.ingrid.mdek.util.MdekObjectUtils">
		<property name="dataMapper">
			<ref bean="mdekDataMapper" />
		</property>
	</bean>
	<bean id="mdekAddressUtils"
		class="de.ingrid.mdek.util.MdekAddressUtils">
		<property name="dataMapper">
			<ref bean="mdekDataMapper" />
		</property>
	</bean>
	<bean id="mdekEmailUtils"
		class="de.ingrid.mdek.util.MdekEmailUtils">
		<property name="connectionFacade">
			<ref bean="connectionFacade" />
		</property>
 	</bean>
	<bean id="mdekErrorUtils"
		class="de.ingrid.mdek.util.MdekErrorUtils">
		<property name="dataMapper">
			<ref bean="mdekDataMapper" />
		</property>
 	</bean>
	<bean id="mdekSecurityUtils"
		class="de.ingrid.mdek.util.MdekSecurityUtils">
		<property name="daoFactory"><ref bean="daoFactory" /></property>
        <property name="authProvider"><ref bean="authenticationProvider" /></property>
 	</bean>

<!-- Services -->
	<bean id="addressService"
		class="de.ingrid.mdek.dwr.services.AddressServiceImpl">
		<property name="addressRequestHandler">
			<ref bean="addressRequestHandler" />
		</property>
	</bean>
	<bean id="backendService"
		class="de.ingrid.mdek.dwr.services.BackendServiceImpl">
		<property name="generalRequestHandler">
			<ref bean="generalRequestHandler" />
		</property>
	</bean>
	<bean id="catalogService"
		class="de.ingrid.mdek.dwr.services.CatalogServiceImpl">
		<property name="catalogRequestHandler">
			<ref bean="catalogRequestHandler" />
		</property>
	</bean>
	<bean id="catalogManagementService"
		class="de.ingrid.mdek.dwr.services.CatalogManagementServiceImpl">
		<property name="mdekJobHandler">
			<ref bean="mdekJobHandler" />
		</property>
		<property name="connectionFacade">
			<ref bean="connectionFacade" />
		</property>
		<property name="catalogRequestHandler">
			<ref bean="catalogRequestHandler" />
		</property>
		<property name="codelistService"><ref bean="codeListService" /></property>
	</bean>

	<bean id="exportService"
		class="de.ingrid.mdek.dwr.services.ExportServiceImpl">
		<property name="catalogRequestHandler">
			<ref bean="catalogRequestHandler" />
		</property>
	</bean>
	<bean id="importService"
		class="de.ingrid.mdek.dwr.services.ImportServiceImpl">
		<property name="catalogRequestHandler">
			<ref bean="catalogRequestHandler" />
		</property>
		<property name="dataMapperFactory">
			<ref bean="dataMapperFactory" />
		</property>
		<property name="protocolFactory">
			<ref bean="protocolFactory" />
		</property>
	</bean>
	<bean id="objectService"
		class="de.ingrid.mdek.dwr.services.ObjectServiceImpl">
		<property name="objectRequestHandler">
			<ref bean="objectRequestHandler" />
		</property>
	</bean>
	<bean id="queryService"
		class="de.ingrid.mdek.dwr.services.QueryServiceImpl">
		<property name="queryRequestHandler">
			<ref bean="queryRequestHandler" />
		</property>
	</bean>
	<bean id="securityService"
		class="de.ingrid.mdek.dwr.services.SecurityServiceImpl">
		<property name="securityRequestHandler">
			<ref bean="securityRequestHandler" />
		</property>
        <property name="authProvider">
            <ref bean="authenticationProvider" />
        </property>
	</bean>
	<bean id="treeService"
		class="de.ingrid.mdek.dwr.services.TreeServiceImpl">
		<property name="objectRequestHandler">
			<ref bean="objectRequestHandler" />
		</property>
		<property name="addressRequestHandler">
			<ref bean="addressRequestHandler" />
		</property>
	</bean>
	
	<bean id="helpService"
		class="de.ingrid.mdek.dwr.services.HelpServiceImpl">
		<property name="daoFactory">
			<ref bean="daoFactory" />
		</property>
	</bean>

<!-- Request Handlers -->
	<bean id="addressRequestHandler"
		class="de.ingrid.mdek.handler.AddressRequestHandlerImpl">
		<property name="connectionFacade">
			<ref bean="connectionFacade" />
		</property>
	</bean>
	<bean id="catalogRequestHandler"
		class="de.ingrid.mdek.handler.CatalogRequestHandlerImpl">
		<property name="connectionFacade">
			<ref bean="connectionFacade" />
		</property>
	</bean>
	<bean id="generalRequestHandler"
		class="de.ingrid.mdek.handler.GeneralRequestHandlerImpl">
		<property name="connectionFacade">
			<ref bean="connectionFacade" />
		</property>
	</bean>
	<bean id="objectRequestHandler"
		class="de.ingrid.mdek.handler.ObjectRequestHandlerImpl">
		<property name="connectionFacade">
			<ref bean="connectionFacade" />
		</property>
	</bean>
	<bean id="queryRequestHandler"
		class="de.ingrid.mdek.handler.QueryRequestHandlerImpl">
		<property name="connectionFacade">
			<ref bean="connectionFacade" />
		</property>
	</bean>
	<bean id="securityRequestHandler"
		class="de.ingrid.mdek.handler.SecurityRequestHandlerImpl">
		<property name="connectionFacade">
			<ref bean="connectionFacade" />
		</property>
	</bean>

<!-- Mdek/Quartz Job handler -->
	<bean id="mdekJobHandler"
		class="de.ingrid.mdek.quartz.MdekJobHandler">
		<property name="scheduler">
			<ref bean="scheduler" />
		</property>
		<property name="connectionFacade">
			<ref bean="connectionFacade" />
		</property>
	</bean>

<!-- Connection Facade -->
	<bean id="connectionFacade"
		class="de.ingrid.mdek.handler.ConnectionFacadeImpl">
		<constructor-arg value="${communication.properties}"/>
	</bean>


<!-- Quartz Beans -->
	<!-- Jobs -->
	<bean name="checkForExpiredDatasetsJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="de.ingrid.mdek.quartz.jobs.CheckForExpiredDatasetsJob" />
		<property name="jobDataAsMap">
			<map>
				<entry key="connectionFacade"><ref bean="connectionFacade"/></entry>
				<entry key="notifyDaysBeforeExpiry"><value>${workflow.notifyDaysBeforeExpiry}</value></entry>
				<entry key="numAddressesMax"><value>${workflow.mail.numAddressesMax}</value></entry>
				<entry key="numObjectsMax"><value>${workflow.mail.numObjectsMax}</value></entry>
			</map>
	  </property>
	</bean>

	<!-- Trigger -->
	<bean id="simpleTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail" ref="checkForExpiredDatasetsJob" />
		<property name="startDelay" value="10000" />
		<property name="repeatInterval" value="600000" />
	</bean>
	<!-- Scheduler Factory -->

	<bean id="scheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="simpleTrigger" />
                <ref bean="simpleTriggerCodeLists" />
			</list>
		</property>
        <property name="applicationContextSchedulerContextKey">  
            <value>applicationContext</value>  
        </property> 
	</bean>
	
	<!-- Mapper Factory -->
	<bean id="dataMapperFactory" class="de.ingrid.mdek.mapping.DataMapperFactory">
		<property name="mapperClasses">
			<map>
		        <entry>
		            <key>
		                <value>igc</value>
		            </key>
		            <ref bean="dummyImportDataMapper" />
		        </entry>
		        <entry>
		            <key>
		                <value>arcgis1</value>
		            </key>
		            <ref bean="scriptImportDataMapper" />
		        </entry>
                <entry>
                    <key>
                        <value>csw202</value>
                    </key>
                    <ref bean="csw202ScriptImportDataMapper" />
                </entry>
		    </map>
	    </property>
	</bean>
	
	<bean id="protocolFactory" class="de.ingrid.mdek.mapping.HashMapProtocolFactory"/>
	
	<bean id="scriptImportDataMapper" class="de.ingrid.mdek.mapping.ScriptImportDataMapper">
		<property name="mapperScript" value="classpath:import/mapper/ArcGIS_to_ingrid_igc.js" />
		<property name="template" value="classpath:import/templates/igc_template.xml" />
		<property name="dataProvider"><ref bean="importDataProvider" /></property>
        <property name="codeListService"><ref bean="codeListService" /></property>
	</bean>

    <bean id="csw202ScriptImportDataMapper" class="de.ingrid.mdek.mapping.ScriptImportDataMapper">
        <property name="mapperScript" value="classpath:import/mapper/csw202_to_ingrid_igc.js" />
        <property name="template" value="classpath:import/templates/igc_template_csw202.xml" />
        <property name="dataProvider"><ref bean="importDataProvider" /></property>
        <property name="codeListService"><ref bean="codeListService" /></property>
    </bean>

	
	<bean id="dummyImportDataMapper" class="de.ingrid.mdek.mapping.DummyImportDataMapper"></bean>
	
	<bean id="importDataProvider" class="de.ingrid.mdek.mapping.ImportDataProviderImpl">
		<property name="sysListMapper">
			<ref bean="sysListMapper" />
		</property>
	</bean>
    
    <!-- Beans for codelist access and synchronisation -->
    
    <bean id="igePersistency" class="de.ingrid.codelists.persistency.IgeCodeListPersistency">
        <property name="connectionFacade"><ref bean="connectionFacade" /></property>
    </bean>
    <bean id="codeListService" class="de.ingrid.codelists.CodeListService">
        <property name="persistencies">
            <list>
                <!-- <ref bean="xmlPersistency" /> -->
                <ref bean="igePersistency" />
            </list>
        </property>
        <property name="defaultPersistency" value="0" />
    </bean>
    
    <bean name="updateCodeListsJobDetail" class="org.springframework.scheduling.quartz.JobDetailBean">
        <property name="jobClass" value="de.ingrid.mdek.quartz.jobs.UpdateCodeListsFromIGEJob" />
    </bean>
    
    <bean id="simpleTriggerCodeLists" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
        <property name="jobDetail" ref="updateCodeListsJobDetail" />
        <property name="startDelay" value="120000" />
        <property name="repeatInterval" value="1800000" />
        <property name="jobDataAsMap">
            <map>
                <entry key="connectionFacade"><ref bean="connectionFacade" /></entry>
            </map>
        </property>
    </bean>
 </beans>
