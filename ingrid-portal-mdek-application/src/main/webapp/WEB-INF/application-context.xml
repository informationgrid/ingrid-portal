<beans default-init-method="init" default-destroy-method="destroy">
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" id="configuration">
		<property name="locations">
            <list>
                <value>classpath:mdek.properties</value>
            </list>
		</property>
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
	</bean>

	<bean id="entryService"
		class="de.ingrid.mdek.dwr.api.EntryServiceImpl">
		<property name="dataConnection">
			<ref local="mdekDataConnection" />
		</property>
	</bean>

	<bean id="sysListMapper"
		class="de.ingrid.mdek.SysListMapper">
		<property name="dataConnection">
			<ref local="mdekDataConnection" />
		</property>
	</bean>

	<bean id="mdekDataMapper"
		class="de.ingrid.mdek.MdekMapper">
		<property name="sysListMapper">
			<ref local="sysListMapper" />
		</property>
 	</bean>

	<bean id="mdekDataConnection"
		class="de.ingrid.mdek.MdekConnection">
		<constructor-arg value="${communication.properties}"/>
		<property name="dataMapper">
			<ref local="mdekDataMapper" />
		</property>
	</bean>

	<bean id="snsService" class="de.ingrid.mdek.dwr.sns.SNSService" />
	<bean id="ctService" class="de.ingrid.mdek.dwr.cts.CoordinateTransformationServiceImpl" />
	<bean id="versionInformation" class="de.ingrid.mdek.beans.VersionInformation" />
	<bean id="downloadTest" class="de.ingrid.mdek.dwr.test.DownloadTest" />
</beans>
