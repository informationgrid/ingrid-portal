<beans default-init-method="init" default-destroy-method="destroy">
	<!-- Import hibernate bean definitions -->
	<import resource="core-services.xml"/>

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" id="configuration">
		<property name="locations">
            <list>
                <value>classpath:mdek.properties</value>
                <value>classpath:default-datasource.properties</value>
            </list>
		</property>
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
	</bean>

	<bean id="mdekDataMapper"
		class="de.ingrid.mdek.MdekMapper">
		<property name="sysListMapper">
			<ref local="sysListMapper" />
		</property>
 	</bean>

	<bean id="snsService" class="de.ingrid.mdek.dwr.services.sns.SNSService" />
	<bean id="ctService" class="de.ingrid.mdek.dwr.services.cts.CoordinateTransformationServiceImpl" />
	<bean id="getCapabilitiesService" class="de.ingrid.mdek.dwr.services.GetCapabilitiesService" />
	<bean id="versionInformation" class="de.ingrid.mdek.beans.VersionInformation" />

<!-- Syslist cache -->
	<bean id="sysListMapper"
		class="de.ingrid.mdek.SysListCache">
		<property name="connectionFacade">
			<ref local="connectionFacade" />
		</property>
	</bean>

<!-- Utility Classes -->
	<bean id="mdekObjectUtils"
		class="de.ingrid.mdek.util.MdekObjectUtils">
		<property name="dataMapper">
			<ref local="mdekDataMapper" />
		</property>
	</bean>
	<bean id="mdekAddressUtils"
		class="de.ingrid.mdek.util.MdekAddressUtils">
		<property name="dataMapper">
			<ref local="mdekDataMapper" />
		</property>
	</bean>
	<bean id="mdekErrorUtils"
		class="de.ingrid.mdek.util.MdekErrorUtils">
		<property name="dataMapper">
			<ref local="mdekDataMapper" />
		</property>
 	</bean>
	<bean id="mdekSecurityUtils"
		class="de.ingrid.mdek.util.MdekSecurityUtils">
		<property name="daoFactory">
			<ref bean="daoFactory" />
		</property>
 	</bean>

<!-- Services -->
	<bean id="addressService"
		class="de.ingrid.mdek.dwr.services.AddressServiceImpl">
		<property name="addressRequestHandler">
			<ref local="addressRequestHandler" />
		</property>
	</bean>
	<bean id="backendService"
		class="de.ingrid.mdek.dwr.services.BackendServiceImpl">
		<property name="generalRequestHandler">
			<ref local="generalRequestHandler" />
		</property>
	</bean>
	<bean id="catalogService"
		class="de.ingrid.mdek.dwr.services.CatalogServiceImpl">
		<property name="catalogRequestHandler">
			<ref local="catalogRequestHandler" />
		</property>
	</bean>
	<bean id="objectService"
		class="de.ingrid.mdek.dwr.services.ObjectServiceImpl">
		<property name="objectRequestHandler">
			<ref local="objectRequestHandler" />
		</property>
	</bean>
	<bean id="queryService"
		class="de.ingrid.mdek.dwr.services.QueryServiceImpl">
		<property name="queryRequestHandler">
			<ref local="queryRequestHandler" />
		</property>
	</bean>
	<bean id="securityService"
		class="de.ingrid.mdek.dwr.services.SecurityServiceImpl">
		<property name="securityRequestHandler">
			<ref local="securityRequestHandler" />
		</property>
	</bean>
	<bean id="treeService"
		class="de.ingrid.mdek.dwr.services.TreeServiceImpl">
		<property name="objectRequestHandler">
			<ref local="objectRequestHandler" />
		</property>
		<property name="addressRequestHandler">
			<ref local="addressRequestHandler" />
		</property>
	</bean>
	
	<bean id="helpService"
		class="de.ingrid.mdek.dwr.services.HelpServiceImpl">
		<property name="daoFactory">
			<ref bean="daoFactory" />
		</property>
	</bean>

<!-- Request Handlers -->
	<bean id="addressRequestHandler"
		class="de.ingrid.mdek.handler.AddressRequestHandlerImpl">
		<property name="connectionFacade">
			<ref local="connectionFacade" />
		</property>
	</bean>
	<bean id="catalogRequestHandler"
		class="de.ingrid.mdek.handler.CatalogRequestHandlerImpl">
		<property name="connectionFacade">
			<ref local="connectionFacade" />
		</property>
	</bean>
	<bean id="generalRequestHandler"
		class="de.ingrid.mdek.handler.GeneralRequestHandlerImpl">
		<property name="connectionFacade">
			<ref local="connectionFacade" />
		</property>
	</bean>
	<bean id="objectRequestHandler"
		class="de.ingrid.mdek.handler.ObjectRequestHandlerImpl">
		<property name="connectionFacade">
			<ref local="connectionFacade" />
		</property>
	</bean>
	<bean id="queryRequestHandler"
		class="de.ingrid.mdek.handler.QueryRequestHandlerImpl">
		<property name="connectionFacade">
			<ref local="connectionFacade" />
		</property>
	</bean>
	<bean id="securityRequestHandler"
		class="de.ingrid.mdek.handler.SecurityRequestHandlerImpl">
		<property name="connectionFacade">
			<ref local="connectionFacade" />
		</property>
	</bean>

<!-- Connection Facade -->
	<bean id="connectionFacade"
		class="de.ingrid.mdek.handler.ConnectionFacadeImpl">
		<constructor-arg value="${communication.properties}"/>
	</bean>


