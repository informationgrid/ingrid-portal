    <profile>
      <id>profile-mcloud-build</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>default-cli</id>
                <phase>package</phase>
                <goals>
                  <goal>copy-dependencies</goal>
                </goals>
                <configuration>
                  <outputDirectory>./mcloud-docker/libs</outputDirectory>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <version>2.4</version>
            <configuration combine.self="override">
              <warSourceExcludes>
                start_dev.jsp,TEST_*.*,test_*.*,dev_*.*,dojo-sources/util/**,dojo-sources/dojo/**,dojo-sources/dijit/**,dojo-sources/dojox/**,dojo-sources/ingrid/**
              </warSourceExcludes>
              <!-- NOTICE: supply log4j.jar and commons-logging.jar in war, SO log4j.properties IS READ FROM WEBAPP !!!! -->
              <!-- Tomcat is configured for log4j, so if NO log4j.jar is supplied in war, log4j.properties is read from tomcat/common/classes, ignoring the one in the war !!! -->
              <packagingExcludes />
              <!-- ALSO CREATE JAR !!! NO WAY TO ADD NO CLASSIFIER TO NAME OF JAR, DEFAULT IS "classes" -> WILL BE ADDED to name of .jar -->
              <attachClasses>true</attachClasses>
              <classesClassifier />
              <!-- CONFIG-FILES needed at runtime in classes-path, so keep all underneath WEB-INF/classes and DO NOT bundle as .jar in war file -->
              <archiveClasses>false</archiveClasses>
              <webResources>
                <resource>
                  <directory>../ingrid-portal-apps/src/webapp/profiles/mcloud/ingrid-portal-mdek-application</directory>
                </resource>
                <resource>
                  <!-- this is relative to the pom.xml directory -->
                  <directory>target/dojo-release</directory>
                </resource>
              </webResources>
              <outputDirectory>mcloud-docker/</outputDirectory>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <dependencies>
