  <!-- ==================== Build Configuration ==================== -->
  <build>
    <finalName>ingrid-portal-mdek-application</finalName>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
      <!-- Copy xml files in java folders to target (Hibernate mapping files) -->
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.xml</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-eclipse-plugin</artifactId>
        <version>2.9</version>
        <inherited>true</inherited>
        <configuration>
          <wtpversion>1.5</wtpversion>
          <downloadSources>false</downloadSources>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <warSourceExcludes>
            start_dev.jsp,TEST_*.*,test_*.*,dev_*.*,dojo-sources/util/**,dojo-sources/dojo/**,dojo-sources/dijit/**,dojo-sources/dojox/**,dojo-sources/ingrid/**
          </warSourceExcludes>
          <!-- NOTICE: supply log4j.jar and commons-logging.jar in war, SO log4j.properties IS READ FROM WEBAPP !!!! -->
          <!-- Tomcat is configured for log4j, so if NO log4j.jar is supplied in war, log4j.properties is read from tomcat/common/classes, ignoring the one in the war !!! -->
          <packagingExcludes>
            **/ingrid-utils.jar,**/ingrid-mdek-api*.jar,**/ehcache*.jar,**/servlet-api*.jar,**/jetspeed-api*.jar
          </packagingExcludes>
          <!-- ALSO CREATE JAR !!! NO WAY TO ADD NO CLASSIFIER TO NAME OF JAR, DEFAULT IS "classes" -> WILL BE ADDED to name of .jar -->
          <attachClasses>true</attachClasses>
          <classesClassifier />
          <!-- CONFIG-FILES needed at runtime in classes-path, so keep all underneath WEB-INF/classes and DO NOT bundle as .jar in war file -->
          <archiveClasses>false</archiveClasses>
          <webResources>
            <resource>
              <!-- this is relative to the pom.xml directory -->
              <directory>target/dojo-release</directory>
            </resource>
          </webResources>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.eclipse.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
        <version>9.4.10.v20180503</version>
        <configuration>
          <scanIntervalSeconds>10</scanIntervalSeconds>
          <reload>automatic</reload>
          <useTestClasspath>true</useTestClasspath>
          <httpConnector>
            <port>8088</port>
          </httpConnector>
          <webApp>
            <webInfIncludeJarPattern>.*/^(asm-all-repackaged)[^/]*\.jar$</webInfIncludeJarPattern>
            <contextPath>/${project.artifactId}</contextPath>
            <extraClasspath>${basedir}/src/test/resources</extraClasspath>
          </webApp>
          <contextXml>${basedir}/src/test/resources/jetty-config.xml</contextXml>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-changes-plugin</artifactId>
        <version>2.9</version>
        <configuration>
          <runOnlyAtExecutionRoot>true</runOnlyAtExecutionRoot>
          <smtpHost>localhost</smtpHost>
          <toAddresses />
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>license-maven-plugin</artifactId>
        <configuration>
          <excludes>
            <exclude>**/*.properties</exclude>
            <exclude>**/*.json</exclude>
            <exclude>**/*.sql</exclude>
            <exclude>**/*.xml</exclude>
            <exclude>**/webapp/dojo-sources/dijit/**</exclude>
            <exclude>**/webapp/dojo-sources/dojo/**</exclude>
            <exclude>**/webapp/dojo-sources/dojox/**</exclude>
            <exclude>**/webapp/dojo-sources/util/**</exclude>
            <exclude>**/webapp/dojo-sources/release/**</exclude>
            <exclude>**/templates/**</exclude>
            <exclude>**/nls/**</exclude>
            <exclude>**/ingrid.profile.js</exclude>
            <exclude>**/js/leaflet/**</exclude>
            <exclude>**/upload/fine-uploader/**</exclude>
            <exclude>**/upload/template/UploadWidget.html</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>

