    <profile>
      <id>release</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.8</version>
            <executions>
              <execution>
                <id>compile</id>
                <phase>compile</phase>
                <configuration>
                  <target>
                    <taskdef classpathref="maven.plugin.classpath" resource="net/sf/antcontrib/antcontrib.properties" />
                    <condition property="foundRepeatable">
                      <and>
                        <resourcecount count="0" when="greater">
                          <fileset dir="src/main/resources/db/migration">
                            <include name="**/R*.sql" />
                          </fileset>
                        </resourcecount>
                        <not>
                          <contains string="${project.version}" substring="-SNAPSHOT" />
                        </not>
                      </and>
                    </condition>
                    <if>
                      <!--suppress UnresolvedMavenProperty -->
                      <equals arg1="${foundRepeatable}" arg2="true" />
                      <then>
                        <fail message="Flyway: You must not have repeatable SQL files during a release!" />
                      </then>
                      <else>
                        <echo message="Flyway: No release version or no repeatable SQL found. OK!" />
                      </else>
                    </if>
                  </target>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>ant-contrib</groupId>
                <artifactId>ant-contrib</artifactId>
                <version>20020829</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
