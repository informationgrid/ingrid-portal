	<script type="text/javascript">
		
		function adapt() {
			if (document.frmEditUser.admin_portal.checked == true) {
				if (document.frmEditUser.admin_partner) {
					document.frmEditUser.admin_partner.checked = false;
					document.frmEditUser.admin_partner.disabled = true;
				}	
				if (document.frmEditUser.partner) {
					document.frmEditUser.partner.disabled = true;
				}
			} else {
				if (document.frmEditUser.admin_partner) {
					document.frmEditUser.admin_partner.disabled = false;
				}
				if (document.frmEditUser.partner) {
					document.frmEditUser.partner.disabled = false;
				}
			}
			if (document.frmEditUser.admin_portal.checked == true || document.frmEditUser.admin_partner.checked == true) {
				document.frmEditUser.admin_index.checked = false;
				document.frmEditUser.admin_catalog.checked = false;
				
				document.frmEditUser.admin_index.disabled = true;
				document.frmEditUser.admin_catalog.disabled = true;
				if (document.frmEditUser.provider) {
					document.frmEditUser.provider.disabled = true;
				}
				document.frmEditUser.doRefresh.style.display = "none";
			} else {
				document.frmEditUser.admin_index.disabled = false;
				document.frmEditUser.admin_catalog.disabled = false;
				if (document.frmEditUser.provider) {
					document.frmEditUser.provider.disabled = false;
				}
				document.frmEditUser.doRefresh.style.display = "inline";
			}
		}

		window.onload = adapt();
	
	</script>
		
