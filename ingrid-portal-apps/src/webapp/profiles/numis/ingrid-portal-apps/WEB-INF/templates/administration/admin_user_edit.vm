		<label class="float_left col2left alignleft" for="partner">#displayFieldLabel('partner' 'zugeordneter Partner')</label>
		<select class="float_left inputstyle" size="1" id="partner" name="partner">
		<option value="" #getSelectedFlag('partner' '')>---</option>
		#foreach ($partner in $partnerlist)
            #set($pident = $partner.ident)
			<option value="$pident" #getSelectedFlag("partner" "$pident")>$partner.name</option>
		#end	
		</select>
	</p>
	&nbsp;&nbsp;<input class="btn left" type="submit" name="doRefresh" value="Anbieter aktualisieren" />
