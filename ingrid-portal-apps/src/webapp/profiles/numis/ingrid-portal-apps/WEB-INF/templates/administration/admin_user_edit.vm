	<p>
		<label class="float_left col2left alignleft">Admin Portal</label>
		<input type="checkbox" id="admin_portal" name="admin_portal" value="1" #getChecked('admin_portal' '1') onchange="adapt()"/>
		<p class="clearer"></p>
	</p>
	<p>
		<label class="float_left col2left alignleft">Admin Partner</label>
		<input type="checkbox" id="admin_partner" name="admin_partner" value="1" #getChecked('admin_partner' '1')  onchange="adapt()"/>
