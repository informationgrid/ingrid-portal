    	<!-- Use old templates for info portlet -->
       	<execute>
            <![CDATA[UPDATE fragment_pref_value SET value='/WEB-INF/templates/chronicle_info.vm' WHERE value='/WEB-INF/templates/chronicle_info_new.vm';]]>
