<script>
    var wkt_${mapId} = '${wkt}';
    var wkt_split${mapId} = wkt_${mapId}.split(";");
    
    var features = [];
    wkt_split${mapId}.forEach(function(wkt) {
        
        var wicket = new Wkt.Wkt();
        wicket.read(wkt);
        
        // "greenIcon from official documentation noted above.
        var feature = wicket.toObject();
        
        // Presumably featureGroup is already instantiated and added to your map.
        features.push(feature);
    });
    var featureGroup${mapId} = L.featureGroup(features).addTo(map${mapId});
    map${mapId}.fitBounds(featureGroup${mapId}.getBounds());
</script>