            </span>
        #else
            <span>$entryLabel</span>
        #end
    #end
    #if($entry.get('children'))
        #foreach($subEntry in $entry.get('children'))
        <li class="folder__content js-accordion-content">
            <ul class="js-accordion-multi">
                <li class="folder__item">
                    #renderTreeFolder($subEntry)
                </li>
            </ul>
        </li>
        #end
    #end
#end

