        <footer class="footer">
            <div class="ob-box-padded ob-box-center ob-clear">
                <div class="footer__top">
                    <a href="$renderResponse.encodeURL('/portal/default-page.psml')">
                        <img class="footer__logo" src="/decorations/layout/ingrid/images/template/mobile-logo.png"></img>
                    </a>
                    <p class="copyright">$MESSAGES.getString('footer.copyright')</p>
                </div>
            </div>
            <hr class="bx-top-0 bx-bot-0">
            <div class="grid">
                <div class="column column--3-4-xl">
                    <div class="ob-box-padded ob-box-center ob-clear">
                        <div class="footer__section">
                        #includeFooterNavigation($footerMenu)
                        </div>
                    </div>
                </div>
                <div class="column column--1-4-xl">
                    <hr class="hr-big mq-hide-l mq-show-xxl bx-top-0 bx-bot-0">
                    <div class="ob-box-padded ob-box-center ob-clear">
                        <div class="footer__section">
                            <div class="footer__bottom"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer__top-link mq-show-l js-top">$MESSAGES.getString('footer.top')</div>
