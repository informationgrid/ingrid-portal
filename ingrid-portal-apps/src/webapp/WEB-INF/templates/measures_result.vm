#macro (renderHit $rs $grouping)
		  <div class="resultset">
		  #if ($rs.title)
			<span class="result_title"><strong><a href="$!rs.url" target="_new" title="Link öffnet in neuem Fenster"><span class="icon"><img src="/ingrid-portal-apps/images/icn_linkextern.gif" alt="externer Link"/></span>#if ($rs.title == "")Kein Titel#else$rs.title#end </a></strong></span>
            <p class="result_description">
            $!rs.abstract 
            </p>
            <p class="result_metadata">
				#if($grouping)
					#if($grouping == 'partner')
						Anbieter: $!rs.provider<br />
					#end
				#else
              Anbieter: $!rs.provider<br />
				#end
			  Rubrik: $!rs.topic<br />
            </p>
			#if($rs.url)
			<p class="result_link">
              <a href="$rs.url" target="_new" title="Link öffnet in neuem Fenster">$!rs.url_str</a>
            </p>
			#end
		  #else
			<span class="result_title"><strong>Suchergebnis ist leer</strong></span>
			<p class="result_link"></p>
		  #end
          </div>
#end
	
	<div class="section ">    
      <div class="resultset_nav float_left">
#if($grouping)
	#renderResultCounterCatalogueGrouping($rankedPageSelector 'Messwerte')
#else
	#renderResultCounterCatalogue($rankedPageSelector 'Messwerte')
#end	
      </div>
      <div class="resultset_nav">
#if($grouping)
	#renderRankedPageNavigationGrouping($rankedPageSelector)
#else
	#renderRankedPageNavigation($rankedPageSelector)
#end
      </div>
      <br />
#foreach($rs in $rankedResultList.hits)

	#if($grouping)
      <div class="resultset_partner_group">
		#set ($groupSubject = "")
		#set ($groupSubjectKey = "")
		#if($grouping == 'partner')
			#set ($groupSubject = "Partner '$rs.partner'")
			#set ($groupSubjectKey = $rs.partnerKey)
		#elseif($grouping == 'provider')
			#set ($groupSubject = "Anbieter '$rs.provider'")
			#set ($groupSubjectKey = $rs.providerKey)
		#end
        <div class="ico_down_black"><span class="title">Gruppierte Ergebnisse für $!{groupSubject}</span></div>
      </div>
	#else
		#if($velocityCount > 1)
			<div class="line"><hr /></div>
		#end
	#end
	#renderHit($rs $grouping)
    #foreach($sub_rs in $rs.get('subHits'))
        <div class="line"><hr /></div>
		#renderHit($sub_rs $grouping)
    #end
	#if($rs.get('moreHits') && $groupSubjectKey != "")
      <div class="line"><hr /></div>
      <div class="resultset_show_partner">
    #set ($action = $renderResponse.createActionURL())
    $action.setParameter('action', 'showAll')
    $action.setParameter('grouping', $grouping)
    $action.setParameter('subject', $groupSubjectKey)
        <span class="result_title"><img src="/ingrid-portal-apps/images/icn_linkintern.gif" alt="interner Link" /><a href="$action">Zeige alle Ergebnisse für $!{groupSubject}</a></span>
      </div>
      <br />
	#end
#end
      <div class="resultset_nav float_left">
#if($grouping)
	#renderResultCounterCatalogueGrouping($rankedPageSelector 'Messwerte')
#else
	#renderResultCounterCatalogue($rankedPageSelector 'Messwerte')
#end	
      </div>
      <div class="resultset_nav">
#if($grouping)
	#renderRankedPageNavigationGrouping($rankedPageSelector)
#else
	#renderRankedPageNavigation($rankedPageSelector)
#end
      </div>
    </div>
