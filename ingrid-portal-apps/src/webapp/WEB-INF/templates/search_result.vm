## SHOULD BE SEPARATED INTO MULTIPLE PORTLETS EACH HANDLING IT'S OWN CONTENT:
## - Simple Search Portlet
## - Similar Terms Portlet
## - Search Result Portlet
##
## templates separated here already !

  <div id="content">
    <div class="section">    

## simple search: SHOULD BE REPLACED WITH SIMPLE SEARCH PORTLET !!!
#parse ('/WEB-INF/templates/search_result_input_tmp.vm')

      <br />

## similar terms: Should be handled BY SEPARATE PORTLET !
#parse ('/WEB-INF/templates/search_result_similar.vm')

## no results template: SHOULD BE SWITCHED IN RESULT PORTLET, not here !
#if(!$unrankedResultList && !$rankedResultList)
#parse ('/WEB-INF/templates/search_no_result.vm')
#end	  

    </div>
    <br />
  </div>
  <div class="clearer"></div>

#if($rankedResultList)
<!-- RESULTS LEFT -->
  <div id="results_left">
    <div class="section">  
      <div class="resultset_nav float_left">
#renderRankedResultCounter($rankedPageSelector)
      </div>
      <div class="resultset_nav">
#renderRankedPageNavigation($rankedPageSelector)
      </div>

      <br />
      #foreach($rs in $rankedResultList.hits)
    	  #if($velocityCount > 1)
			<div class="line"><hr /></div>
		  #end		  <div class="resultset">
		  #if ($rs.title)
		    #if ($rs.type == "nutch")
			  <span class="result_title"><strong><a href="$!rs.url" target="_new" title="Link öffnet in neuem Fenster"><span class="icon"><img src="/ingrid-portal-apps/images/icn_linkextern.gif" alt="externer Link"/></span>#if ($rs.title == "")Kein Titel#else$rs.title#end </a></strong></span>
			#elseif($rs.type == "dsc")
			  #if($rs.udk_class)
				#set($udkObjClassNameKey = "udk_obj_class_name_$rs.udk_class")
				#set($udkObjClassName = $MESSAGES.getString($udkObjClassNameKey))
				<span class="result_title"><span class="icon_udk"><img src="/ingrid-portal-apps/images/icn_udk_obj_${rs.udk_class}.gif" alt="${udkObjClassName}" title="${udkObjClassName}"></span><strong><a href="portal/search-detail.psml?docid=$rs.docid&plugid=$rs.plugid" target="_new" title="Link öffnet in neuem Fenster">#if ($rs.title == "")Kein Titel#else$rs.title#end </a></strong></span>
			  #else
				<span class="result_title"><strong><a href="portal/search-detail.psml?docid=$rs.docid&plugid=$rs.plugid" target="_new" title="Link öffnet in neuem Fenster"><span class="icon"><img src="/ingrid-portal-apps/images/icn_linkextern.gif" alt="externer Link"/></span>#if ($rs.title == "")Kein Titel#else$rs.title#end </a></strong></span>
			  #end
			#else
			  <span class="result_title"><strong>#if ($rs.title == "")Kein Titel#else$rs.title#end </strong></span>
			#end		
            <p class="result_description">
            $!rs.abstract 
            </p>
            <p class="result_metadata">
              Anbieter: $!rs.provider<br />
    
              Quelle: $!rs.source<br />
              Ranking: $!rs.score<br />
            </p>
			#if($rs.wms_url)
			<p class="result_link">
				<img src="/ingrid-portal-apps/images/icn_linkintern.gif" alt="interner Link" /><a href="portal/main-maps.psml?wms_url=$rs.wms_url" target="_new" title="Link öffnet in neuem Fenster">Zeige Karte</a>
			</p>				
			#end
			#if($rs.url)
			<p class="result_link">
              <a href="$rs.url" target="_new" title="Link öffnet in neuem Fenster">$rs.url</a>
            </p>
			#end
		  #else
			<span class="result_title"><strong>Suchergebnis ist leer</strong></span>
			<p class="result_link"></p>
		  #end
          </div>
	  #end

      <div class="resultset_nav float_left">
#renderRankedResultCounter($rankedPageSelector)
      </div>

      <div class="resultset_nav">
#renderRankedPageNavigation($rankedPageSelector)
      </div>

    </div>
    <!-- // PORTLET EINFACHE SUCHE -->    
  </div>
#end  
  
#if($unrankedResultList)
<!-- RESULTS RIGHT -->
  <div id="results_right">
    <div class="portlet">
      <div class="resultset_nav float_left">
#renderUnrankedResultCounter($unrankedPageSelector)
      </div>

      <div class="resultset_nav">
        &nbsp;
      </div>
      <div class="resultset_nav">
#renderUnrankedPageNavigation($unrankedPageSelector)
      </div>
      <br />

      #foreach($rs in $unrankedResultList)
    	  <div class="resultset_partner_group">
            <div class="ico_down_black"><span class="title">$rs.title#if($rs.hits) ($rs.hits Treffer)#end</span><br /></div>
            <p class="result_description">
              $rs.abstract
            </p>
            <p class="result_metadata">
              Anbieter: $rs.provider
            </p>
          </div>

          <div class="resultset">
            <span class="result_title"><strong><a href="$rs.url" target="_new" title="Link öffnet in neuem Fenster"><span class="icon"><img src="/ingrid-portal-apps/images/icn_linkextern.gif" alt="externer Link"/></span>Zur Trefferliste</a></strong></span>
          </div>
          <br />
      #end
      
      <div class="resultset_nav float_left">
#renderUnrankedResultCounter($unrankedPageSelector)
      </div>

      <div class="resultset_nav">
        &nbsp;
      </div>
      <div class="resultset_nav">
#renderUnrankedPageNavigation($unrankedPageSelector)
      </div>
    </div>    
  </div>
#end



  <div class="clearer"></div>