#set ($contextPath = $renderRequest.getAttribute('org.apache.jetspeed.request.RequestContext').getRequest().getContextPath())
#set ($action = $renderResponse.createActionURL())

<div class="section">
	<div class="optional-links" style="margin: 0 0 0 8px">
		<img alt="aktiver Link" src="/ingrid-portal-apps/images/icn_maps_save.gif"/>
			#if($logged)
				#set ($link = $renderResponse.encodeURL("/portal/main-maps.psml#formSaveMapUrl"))
				<a href="$link" title="$MESSAGES.getString("maps.save.wmc.tooltip")">$MESSAGES.getString("maps.save.wmc")</a>
			#else
				#set ($link1 = $renderResponse.encodeURL("/portal/service-myportal.psml"))
				#set ($link2 = $renderResponse.encodeURL("/portal/main-maps.psml#wms_viewer"))
				#set ($msg = $MESSAGES.getString('maps.save.unlogged'))
                <a href="" onclick="href=unloggedAlert('$msg', '$link1', '$link2')" title="$MESSAGES.getString("maps.save.wmc.tooltip")">$MESSAGES.getString("maps.save.wmc")</a>
			#end
	</div>
	
	<iframe src="$wmsURL" style="width:100%;height:676px;border:0;" name="wms_viewer" marginheight="0" marginwidth="0" frameborder="0">
			$MESSAGES.getString("maps.error.noframes") 
	</iframe>
	
</div>

<script type="text/javascript">
	function unloggedAlert(msg, link1, link2) {
		var check = confirm (msg);
		
		if(check==true){
			return link1;
		}else{
			return link2;
		}
	}	
</script>