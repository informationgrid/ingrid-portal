#macro (getIconImage $facet $facetClass $facetStyle)
    #if($facet.getIcon())
        #set($icon = $facet.getIcon())
        #if($icon.startsWith("#"))
            <svg class="icon bx-top-s icon-$facet.getId() #if($facetClass)$facetClass#end" style="#if($facetStyle)$facetStyle#end"><use xlink:href="$icon" /></svg>
        #elseif($icon.startsWith("/"))
            <img style="margin: auto;" class="bx-top-s icon-$facet.getId()" src="$icon"></img>
        #else
            <i class="icon bx-top-s icon-$facet.getId() #if($facetClass)$facetClass#end $icon" style="#if($facetStyle)$facetStyle#end"></i>
        #end
    #else
       <i class="icon bx-top-s icon-question-mark #if($facetClass)$facetClass#end" style="#if($facetStyle)$facetStyle#end"></i>
    #end
#end

<script>
$( ".tab__content" ).each(function( i ) {
    var tabContent = $( this );
    var height = 0;
    // Get highest height of flex-row
    tabContent.find( ".flex-row" ).each(function( index ) {
      var elemHeight = $( this ).height();
      if(elemHeight > height){
        height = elemHeight;
      }
    });
    
    // Set highest height to all flex-rows
    tabContent.find( ".flex-row" ).each(function( index ) {
      var elem = $( this );
      if(height != 0){
        elem.height(height);
      }
    });
});
</script>