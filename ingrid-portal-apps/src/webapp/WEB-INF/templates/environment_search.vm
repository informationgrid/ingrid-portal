#set ($MESSAGES = $portletConfig.getResourceBundle($renderRequest.Locale))
#set ($action = $renderResponse.createActionURL())
<form action="$action" method="get" name="environment_search" id="environment_search">
	<div class="formbody">
		<h2 class="nospace">Auswahlkriterien
		</h2>
		#displayFormErrors()
		<div class="float_left">
			<h3>
				<label for="xx2">#displayFieldLabel('themes' $MESSAGES.getString('envSearch.themes'))
				</label>
			</h3>
			<select class="env_themes inputstyle" name="themes" id="xx2" size="5" multiple="multiple">
				<option value="all" #getSelected('themes' 'all')>------ Alles auswählen ------
				</option>
				<option value="Abfall" #getSelected('themes' 'Abfall')>Abfall
				</option>
				<option value="Altlasten" #getSelected('themes' 'Altlasten')>Altlasten
				</option>
				<!--option value="bio" #getSelected('themes' 'Artenvielfalt')>Artenvielfalt
				</option-->
				<option value="Bauen" #getSelected('themes' 'Bauen')>Bauen
				</option>
				<option value="Boden" #getSelected('themes' 'Boden')>Boden
				</option>
				<option value="Chemikalien" #getSelected('themes' 'Chemikalien')>Chemikalien
				</option>
				<option value="DatenKarten" #getSelected('themes' 'DatenKarten')>Daten/Karten
				</option>
				<option value="Energie" #getSelected('themes' 'Energie')>Energie
				</option>
				<option value="Forstwirtschaft" #getSelected('themes' 'Forstwirtschaft')>Forstwirtschaft
				</option>
				<option value="Gentechnik" #getSelected('themes' 'Gentechnik')>Gentechnik
				</option>
				<option value="Geologie" #getSelected('themes' 'Geologie')>Geologie
				</option>
				<option value="Gesundheit" #getSelected('themes' 'Gesundheit')>Gesundheit
				</option>
				<option value="LaermErschuetterung" #getSelected('themes' 'LaermErschuetterung')>Lärm/Erschütterungen
				</option>
				<option value="Landwirtschaft" #getSelected('themes' 'Landwirtschaft')>Landwirtschaft
				</option>
				<option value="LuftKlima" #getSelected('themes' 'LuftKlima')>Luft/Klima
				</option>
				<option value="NachhaltigeEntwicklung" #getSelected('themes' 'NachhaltigeEntwicklung')>Nachhaltige Entwicklung
				</option>
				<!--option value="nat" #getSelected('themes' 'nat')>Naturschutz
				</option-->
				<option value="NaturLandschaft" #getSelected('themes' 'NaturLandschaft')>Natur/Landschaft
				</option>
				<option value="Statusberichte" #getSelected('themes' 'Statusberichte')>Statusberichte
				</option>
				<option value="Strahlung" #getSelected('themes' 'Strahlung')>Strahlung
				</option>
				<option value="Tierschutz" #getSelected('themes' 'Tierschutz')>Tierschutz
				</option>
				<option value="Umweltinformation" #getSelected('themes' 'Umweltinformation')>Umweltinformationen
				</option>
				<option value="Umweltwirtschaft" #getSelected('themes' 'Umweltwirtschaft')>Umweltwirtschaft
				</option>
				<option value="Umweltzustand" #getSelected('themes' 'Umweltzustand')>Umweltzustand
				</option>
				<option value="Verkehr" #getSelected('themes' 'Verkehr')>Verkehr
				</option>
				<option value="Wasser" #getSelected('themes' 'Wasser')>Wasser
				</option>
			</select>
		</div>
		<div class="float_left marginleft">
			<h3>
				<label for="xx3">#displayFieldLabel('category' $MESSAGES.getString('envSearch.category'))
				</label>
			</h3>
			<select class="funct_class inputstyle" name="category" id="xx3" size="5" multiple="multiple">
				<option value="all" #getSelected('category' 'all')>------ Alles auswählen ------
				</option>
				<option value="Rechtliches" #getSelected('category' 'Rechtliches')>Rechtliches
				</option>
				<option value="Konzeptionelles" #getSelected('category' 'Konzeptionelles')>Konzeptionelles
				</option>
				<option value="Statusberichte" #getSelected('category' 'Statusberichte')>Statusberichte
				</option>
				<option value="Umweltzustand" #getSelected('category' 'Umweltzustand')>Umweltzustand
				</option>
				<option value="DatenKarten" #getSelected('category' 'DatenKarten')>Daten und Karten
				</option>
				<option value="Risikobewertungen" #getSelected('category' 'Risikobewertungen')>Risikobewertungen
				</option>
			</select>
		</div>  
		<span class="clearer">
		</span>
		<br style="line-height:10px" />
		<div class="float_left">
			<h3>
				<label for="xx4">#displayFieldLabel('partner' $MESSAGES.getString('envSearch.partner'))
				</label>
			</h3>
			<select class="spacial_relation inputstyle" name="partner" id="xx4" size="5" multiple="multiple">
				#displayPartner()
			</select>
		</div>
		<div class="float_left marginleft">
			<h3>#displayFieldLabel('grouping' $MESSAGES.getString('envSearch.grouping'))
			</h3>
			<input type="radio" id="grouping_no" name="grouping" value="none" #getChecked('grouping' 'none')/>
			<label class="radiogroup" for="grouping_no">Keine
			</label>
			<br />
			<input type="radio" id="grouping_partner" name="grouping" value="partner" #getChecked('grouping' 'partner')/>
			<label class="radiogroup" for="grouping_partner">Bund/Länder
			</label>
			<br />
			<input type="radio" id="grouping_info" name="grouping" value="info" #getChecked('grouping' 'info')/>
			<label class="radiogroup" for="grouping_info">Informationsanbieter
			</label>
			<br />
		</div>
		<br />
		<span class="clearer">
		</span>
	</div>
	<div class="formfooter">
		<div align="right">
			<input class="btn" type="submit" value="Anzeigen" />
		</div>
	</div>
</form>
