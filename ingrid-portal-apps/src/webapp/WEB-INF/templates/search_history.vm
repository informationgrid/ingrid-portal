  <div class="section">    
#set ($action = $renderResponse.createActionURL())
    <form action="$action" method="post" name="search_history" id="search_history">
      <input type="hidden" name="action" value="doSubmit"/>
      <div class="formbody">
		#displayFormErrors()
        <div class="float_left">
          <h3>$MESSAGES.getString('searchHistory.title.lastQueries')</h3>
        </div>  
##        <div class="float_right">
###set ($action = $renderResponse.createActionURL())
##$action.setParameter('action','doShowAllQueries')
##            <div class="ico_linkintern"><p><a href="$action">$MESSAGES.getString('searchHistory.label.showAllQueries')</a></p></div>  
##        </div>
        <span class="clearer"></span>
        <ul class="internlinklist2">
#foreach($query in $queries)
		<li><a href="$query.url">$query.query</a> #if($query.ds == "2")<span class="smaller">$MESSAGES.getString('search.type.address')</span>#elseif($query.ds == "3")<span class="smaller">$MESSAGES.getString('search.type.research')</span>#end</li>
#end	
		</ul>
        <br />
$MESSAGES.resetMsgParams()
$MESSAGES.setMsgParam("$no_entries")
$MESSAGES.setMsgParam("$max_entries")
        <h3>$MESSAGES.getStringWithMsgParams('searchSave.label.results')</h3>
          <ul class="internlinklist">
            #foreach($entry in $searchSaveEntries)
				#set($idx = $velocityCount - 1)
				<li><input id="chk_$idx" name="chk_$idx" type="checkbox"> <a href="$entry.url">$entry.title</a> #if($entry.ds == "2")<span class="smaller">$MESSAGES.getString('search.type.address')</span>#elseif($entry.ds == "3")<span class="smaller">$MESSAGES.getString('search.type.research')</span>#end</li>
			#end
          </ul>
          <br>
          <input class="btn" value="$MESSAGES.getString('common.form.button.delete')" name="deleteEntries" type="submit">
      </div>
    </form>
  </div>
