    #foreach($key in $record.keySet())
        #set($level = $level + 1)
        #if($record.get($key).get(0))
            #foreach($newRenderRecord in $record.get($key))
            #if (!$newRenderRecord.isEmpty())
            #renderRec($newRenderRecord $level)
            #end
            #end
        #else
            #if($key != "summary" && $key != "title")
                #renderUDKEntry($record $key)
            #end
        #end
        #set($level = $level - 1)
    #end
#end

