    <table class="detail_image_table">
        <tr>
            <td class="detail_image_td">
                ##<img src="$entry.imgUrl" alt="$MESSAGES.getString('common.alt.icon.extern')" />
                <img class="detail_image" src="$image" alt="$MESSAGES.getString('common.alt.icon.extern')" />
