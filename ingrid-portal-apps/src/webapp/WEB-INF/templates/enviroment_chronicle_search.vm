#set ($MESSAGES = $portletConfig.getResourceBundle($renderRequest.Locale))
#set ($action = $renderResponse.createActionURL())
<form action="$action" method="post" enctype="" name="chronicle_search" id="enviroment_chronicle_search">
	<div class="formbody">
		<h2 class="nospace">Auswahlkriterien
		</h2>
		#displayFormErrors()
		<div class="float_left">  
			<h3>#displayFieldLabel('event' $MESSAGES.getString('chronicle.eventtype'))
			</h3>
			<table cellpadding="0" cellspacing="0">
				<tr>
					<td>
						<input id="chk_all" name="event" type="checkbox" onclick="ingrid_checkAll(document.chronicle_search.event)" onkeypress="ingrid_checkAll(document.chronicle_search.event)"  value="all" #getChecked('event' 'all')/> 
						<label for="chk_all">Alle Ereignistypen
						</label>
					</td>
					<td>
					</td>
					<td>
					</td>
				</tr>
				<tr>
					<td>
						<input id="chk_1" name="event" type="checkbox" onclick="ingrid_checkGroup(document.chronicle_search.event)" onkeypress="ingrid_checkGroup(document.chronicle_search.event)" value="act" #getChecked('event' 'act')/> 
						<label for="chk_1">Aktionen
						</label>
					</td>
					<td>
						<input id="chk_2" name="event" type="checkbox" onclick="ingrid_checkGroup(document.chronicle_search.event)" onkeypress="ingrid_checkGroup(document.chronicle_search.event)" value="his" #getChecked('event' 'his')/> 
						<label for="chk_2">Geschichte
						</label>
					</td>
					<td>
						<input id="chk_3" name="event" type="checkbox" onclick="ingrid_checkGroup(document.chronicle_search.event)" onkeypress="ingrid_checkGroup(document.chronicle_search.event)" value="law" #getChecked('event' 'law')/> 
						<label for="chk_3">Gesetze
						</label>
					</td>
				</tr>
				<tr>
					<td>
						<input id="chk_4" name="event" type="checkbox" onclick="ingrid_checkGroup(document.chronicle_search.event)" onkeypress="ingrid_checkGroup(document.chronicle_search.event)" value="fou" #getChecked('event' 'fou')/> 
						<label for="chk_4">Gründungen
						</label>
					</td>
					<td>
						<input id="chk_5" name="event" type="checkbox" onclick="ingrid_checkGroup(document.chronicle_search.event)" onkeypress="ingrid_checkGroup(document.chronicle_search.event)" value="cat" #getChecked('event' 'cat')/> 
						<label for="chk_5">Katastrophen
						</label>
					</td>
					<td>
						<input id="chk_6" name="event" type="checkbox" onclick="ingrid_checkGroup(document.chronicle_search.event)" onkeypress="ingrid_checkGroup(document.chronicle_search.event)" value="con" #getChecked('event' 'con')/> 
						<label for="chk_6">Konventionen
						</label>
					</td>
				</tr>
				<tr>
					<td>
						<input id="chk_7" name="event" type="checkbox" onclick="ingrid_checkGroup(document.chronicle_search.event)" onkeypress="ingrid_checkGroup(document.chronicle_search.event)" value="lit" #getChecked('event' 'lit')/> 
						<label for="chk_7">Literatur
						</label>
					</td>
					<td>
						<input id="chk_8" name="event" type="checkbox" onclick="ingrid_checkGroup(document.chronicle_search.event)" onkeypress="ingrid_checkGroup(document.chronicle_search.event)" value="nat" #getChecked('event' 'nat')/> 
						<label for="chk_8">Natur d. Jahres
						</label>
					</td>
					<td>
						<input id="chk_9" name="event" type="checkbox" onclick="ingrid_checkGroup(document.chronicle_search.event)" onkeypress="ingrid_checkGroup(document.chronicle_search.event)" value="dir" #getChecked('event' 'dir')/> 
						<label for="chk_9">Richtlinien
						</label>
					</td>
				</tr>
				<tr>
					<td>
						<input id="chk_10" name="event" type="checkbox" onclick="ingrid_checkGroup(document.chronicle_search.event)" onkeypress="ingrid_checkGroup(document.chronicle_search.event)" value="shi" #getChecked('event' 'shi')/> 
						<label for="chk_10">Schiffsunfälle
						</label>
					</td>
					<td>
						<input id="chk_11" name="event" type="checkbox" onclick="ingrid_checkGroup(document.chronicle_search.event)" onkeypress="ingrid_checkGroup(document.chronicle_search.event)" value="acc" #getChecked('event' 'acc')/> 
						<label for="chk_11">Störfälle
						</label>
					</td>
					<td>
					</td>
				</tr>
			</table>
		</div>  
		<span class="clearer">
		</span>
		<div class="float_left">
			<h3>#displayFieldLabel('time_select' 'Zeitbezug')
			</h3>
			<p>
				<input type="radio" id="vonbis" name="time_select" value="period" #getChecked('time_select' 'period')/>
				<label for="from_yy">#displayFieldLabel('time_from' 'Von:')</label>
				<input class="inputstyletext" id="from_yy" size="10" maxlength="10" type="text" name="time_from" value="#getFieldValue('time_from')"/>
				<label for="till_yy">#displayFieldLabel('time_to' 'Bis:')</label>
				<input class="inputstyletext" id="till_yy" size="10" maxlength="10" type="text" name="time_to" value="#getFieldValue('time_to')"/> &nbsp;(TT.MM.JJJJ)
				<br />
			</p>
			<p>
				<input type="radio" id="am" name="time_select" value="date" #getChecked('time_select' 'date')/>
				<label for="at_yy">#displayFieldLabel('time_at' 'Am:')</label>
				<input class="inputstyletext" id="at_yy" size="10" maxlength="10" type="text" name="time_at" value="#getFieldValue('time_at')"/> &nbsp;(TT.MM.JJJJ)
				<br />
			</p>
		</div>  
		<span class="clearer">
		</span>
		<div class="float_left">
			<h3>
				<label class="alignleft" for="qry">#displayFieldLabel('search' 'Suchbegriff')</label>
			</h3>
			<input class="qry_chronic inputstyletext" id="qry" name="search" value="#getFieldValue('search')"/>
		</div>  
		<span class="clearer">
		</span>
	</div>
	<div class="formfooter">
		<div align="right">
			<input class="btn" type="submit" value="Anzeigen" />
		</div>
	</div>
</form>