##renderPortletTitle($MESSAGES.getString($titleKey) "h2" "bx-top-0")
#if($helpKey && $helpKey != "")
    <div class="box__content ob-container" style="padding-top: 1.25rem; padding-bottom: 0;">
        #renderHelpIcon("" "float:right" $helpKey)
    </div>
#end
#set ($contextPath = $renderRequest.getAttribute('org.apache.jetspeed.request.RequestContext').getRequest().getContextPath())
#set ($action = $renderResponse.createActionURL())
$action.setParameter('action','doSearch')
<form action="$action" method="get" name="SearchForm" id="SearchForm" onSubmit='if (this.q.value == "$MESSAGES.getString('searchSimple.query.initial')") this.q.value=""'>
    <div class="box box--fill box--large">
        <div class="box__content ob-container">
            <div class="search-form ob-clear ob-flex">
                <input class="field field--large" type="text" placeholder="Suchbegriff eingeben" id="qrystr" name="q" value="#getHTMLEscapedFieldValue('q')" onfocus='if (this.value == "$MESSAGES.getString('searchSimple.query.initial')") this.value=""' onblur='if (this.value == "") this.value="$MESSAGES.getString('searchSimple.query.initial')"'>
                <button class="btn btn--primary btn--medium btn--icon-transition">
                    <svg class="icon mq-show-m"><use xlink:href="#magnifier"></use></svg>
                    <div class="mq-hide-m">$MESSAGES.getString('searchSimple.query.submit')</div>
                </button>
            </div>
        </div>
       
    </div>
    #addErrorFormMessageBox('q')
</form>
