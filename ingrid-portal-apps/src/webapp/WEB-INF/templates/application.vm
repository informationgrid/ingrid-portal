				<a title="$MESSAGES.getString('application.menu.tab.2.tooltip')" href="$renderResponse.encodeURL('/portal/application/main-application.psml')?action=2">
					<div>
						<img src="/ingrid-portal-apps/images/application/app-catalog-wsv.png"></img><p>$MESSAGES.getString('application.menu.tab.2')</p>
					</div>
				</a>
				#end
			</li>
			<li>
				#if ($app_menu == "extern1")
					<div>
						<img src="/ingrid-portal-apps/images/application/app-arcgis.png"></img><p>$MESSAGES.getString('application.menu.tab.extern1')</p>
					</div>
				#else
