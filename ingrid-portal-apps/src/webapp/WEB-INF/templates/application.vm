	</div>
	
	### CONTENT ###
	<div class="float_left application_content">
		<div>
		#set($description = "application.description.tab.$app_menu")
		#set($button = "application.button.tab.$app_menu")
		#set($button_tooltip = "application.button.tooltip.tab.$app_menu")
			<div>
				<p>$MESSAGES.getString($description)</p>
				<br>
				<span class="clearer"></span>
				<br>
				<div class="float_right">
					#if($app_menu.startsWith("extern"))
						#if($app_menu == "extern1")
							<form action="http://google.de" method="get" target="_blank">
						#else
							<form action="https://bscw.ilmenau.baw.de/bscw/bscw.cgi/13594949" method="get" target="_blank">
						#end
					#else
						<form action="$action" method="get">
					#end
						#renderInputButton($MESSAGES.getString($button) "" "" $MESSAGES.getString($button_tooltip))
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
