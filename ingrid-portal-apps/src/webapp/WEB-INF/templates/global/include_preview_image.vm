<script>
    $( document ).ready(function() {
        $('img.preview_image').each(function(index) {
            var img = $(this);
            if(img){
                if(img.length > 0){
                    var srcRegEx = img[0].outerHTML.match(new RegExp('<img.*?tmp=\"(.*?)\"'));
                    if(srcRegEx && srcRegEx.length > 0) {
                        var src = srcRegEx[srcRegEx.length - 1];
                        if(src.indexOf('https://') == -1 && location.protocol == 'https:') {
                            var respJson;
                            var http = new XMLHttpRequest();
                            http.open('GET', '$restUrlHttpGet?url=' + encodeURIComponent(src), true);
                            http.onreadystatechange = function() {
                                if (this.readyState == this.DONE) {
                                    if (this.status === 200) {
                                        if(this.response){
                                            img[0].src = this.response;
                                            img[0].classList.remove('is-hidden');
                                        }
                                    }
                                }
                            };
                            http.send();
                            return ('');
                        } else {
                            if(src.indexOf('http') > -1) {
                                img[0].src = src;
                                img[0].classList.remove('is-hidden');
                            }
                        }
                    }
                }
            }
        });
    });
</script>