#set ($contextPath = $renderRequest.getAttribute('org.apache.jetspeed.request.RequestContext').getRequest().getContextPath())
#set ($action = $renderResponse.createActionURL())
$action.setParameter('action','doSearch')
<div class="formbody">
    <form action="$action" method="get" name="SearchForm" id="SearchForm" onSubmit='if (this.q.value == "$MESSAGES.getString('searchSimple.query.initial')") this.q.value=""'>
    	<input type="hidden" name="ds" value="$ds"/>
    	<input type="hidden" name="action" value="doSearch"/>
		<p class="datasource_selection">
#set ($action = $renderResponse.createActionURL())
$action.setParameter('action','doChangeDS')
#if($ds=="1")
	<strong>$MESSAGES.getString('searchSimple.area.envInfos')</strong>
#else
    $action.setParameter('ds','1')
	<a href="$action">$MESSAGES.getString('searchSimple.area.envInfos')</a>	
#end
&nbsp;&nbsp;&nbsp;&nbsp;
#if($ds=="2")
	<strong>$MESSAGES.getString('searchSimple.area.addresses')</strong>
#else
    $action.setParameter('ds','2')
	<a href="$action">$MESSAGES.getString('searchSimple.area.addresses')</a>	
#end
&nbsp;&nbsp;&nbsp;&nbsp;
#if($ds=="3")
	<strong>$MESSAGES.getString('searchSimple.area.research')</strong>
#else
    $action.setParameter('ds','3')
	<a href="$action">$MESSAGES.getString('searchSimple.area.research')</a>	
#end
    	</p>
		<div class="qrytxt">
			<label class="hide" for="qrytxt">Suche: </label><textarea class="qrytxt" id="qrytxt" cols="20" rows="3" name="q" 
				onfocus='if (this.value == "$MESSAGES.getString('searchSimple.query.initial')") this.value=""' onblur='if (this.value == "") this.value="$MESSAGES.getString('searchSimple.query.initial')"'>#getHTMLEscapedFieldValue('q')</textarea>
			<input class="btn float_right" name="doSubmit" type="submit" value="$MESSAGES.getString('searchSimple.query.submit')" />
			<input class="btn float_left" name="doSetQuery" type="submit" value="$MESSAGES.getString('searchExtended.query.submit2')" />
			<span class="clearer"></span>
		</div>
    </form>
    <div class="optional-links">
      <img src="/ingrid-portal-apps/images/icn_down.gif" alt="$MESSAGES.getString('common.alt.icon.active')" />&nbsp;<span>$MESSAGES.getString('searchSimple.extended')</span>
#set ($action = $renderResponse.createActionURL())
$action.setParameter('action','doSearchHistory')
      <img src="/ingrid-portal-apps/images/icn_linkintern.gif" alt="$MESSAGES.getString('common.alt.icon.intern')" /><a href="$action">$MESSAGES.getString('searchSimple.history')</a>
#set ($action = $renderResponse.createActionURL())
$action.setParameter('action','doSearchSettings')
	  <img src="/ingrid-portal-apps/images/icn_linkintern.gif" alt="$MESSAGES.getString('common.alt.icon.intern')" /><a href="$action">$MESSAGES.getString('searchSimple.settings')</a>
#set ($link = $renderResponse.encodeURL("${contextPath}/portal/help.psml?hkey=search-tipps-1"))
<script language="JavaScript">
	document.write("<img src=\"/ingrid-portal-apps/images/icn_linkintern.gif\" alt=\"$MESSAGES.getString('common.alt.icon.intern')\" /><a href=\"javascript:ingrid_openWindow('$link',750,550);\">$MESSAGES.getString('searchSimple.search.tips')</a>");
</script>
<noscript>
	<img src="/ingrid-portal-apps/images/icn_linkintern.gif" alt="$MESSAGES.getString('common.alt.icon.intern')" /><a href="$link" target="_new">$MESSAGES.getString('searchSimple.search.tips')</a>
</noscript>
