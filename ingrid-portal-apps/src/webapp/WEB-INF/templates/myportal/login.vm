		</div>
		<br />
#displayFormErrors()
		<p>
			<label class="hide" for="login">$MESSAGES.getString('login.form.username'): </label><input class="inputstyletext" type="text" id="login" name="${loginConstants.USERNAME}" value="#getFieldValue($loginConstants.USERNAME)" onclick="clearUser()" />
		</p>
	    <p>
			<label class="hide" for="passwd">$MESSAGES.getString('login.form.passwd'): </label><input class="inputstyletext" type="password" id="passwd" name="${loginConstants.PASSWORD}" value="#getFieldValue($loginConstants.PASSWORD)" onfocus="clearPasswd()" onclick="clearPasswd()" />
	    </p>
		<span class="clearer"></span>
