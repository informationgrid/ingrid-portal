#renderPortletTitle($MESSAGES.getString('javax.portlet.title'))
<article class="content ob-container ob-box-narrow ob-box-center">
    $MESSAGES.getString('contact.intro.praeEmail')
    <a href="mailto:$portalEmail" title="$MESSAGES.getString('contact.intro.praeEmail.tooltip')">$portalEmail</a>
    $contactIntroPostEmail
</article>
<section class="block block--padded">
    <div class="ob-box-wide ob-box-center">
        <article class="content ob-container ob-box-narrow ob-box-center">
            <h4>Kontakformular</h4>
            #set ($action = $renderResponse.createActionURL())
            <form action="$action" method="post" name="contact" id="contact" enctype="multipart/form-data">
                <div>
                #displayFormErrors()
                    <div class="media">
                        <div class="media__obj media__obj--large media__obj--left">
                            <label for="bemerkungen">#displayFieldLabel('message' "$MESSAGES.getString('contact.form.message')")</label>
                        </div>
                        <div class="media__body">
                            <textarea name="message" id="bemerkungen">#getFieldValue('message')</textarea>
                        </div>
                    <h4>$MESSAGES.getString('contact.form.required')</h4>
                    <div class="media">
                        <div class="media__obj media__obj--large media__obj--left">
                            <label for="xx2">#displayFieldLabel('firstname' "$MESSAGES.getString('contact.form.firstname')")</label>
                        </div>
                        <div class="media__body">
                            <input type="text" id="xx2" name="firstname" value="#getFieldValue('firstname')"/>
                        </div>
                    </div>
                    <div class="media">
                        <div class="media__obj media__obj--large media__obj--left">
                            <label for="xx3">#displayFieldLabel('lastname' "$MESSAGES.getString('contact.form.lastname')")</label>
                        </div>
                        <div class="media__body">
                            <input type="text" id="xx3" name="lastname" value="#getFieldValue('lastname')"/>
                        </div>
                    </div>
                    <div class="media">
                        <div class="media__obj media__obj--large media__obj--left">
                            <label for="xx4">$MESSAGES.getString('contact.form.company')</label>
                        </div>
                        <div class="media__body">
                            <input type="text" id="xx4" name="company" value="#getFieldValue('company')"/>
                        </div>
                    </div>
                    <div class="media">
                        <div class="media__obj media__obj--large media__obj--left">
                            <label for="xx5">$MESSAGES.getString('contact.form.phone')</label>
                        </div>
                        <div class="media__body">
                            <input type="text" id="xx5" name="phone" value="#getFieldValue('phone')"/>
                        </div>
                    </div>
                    <div class="media">
                        <div class="media__obj media__obj--large media__obj--left">
                            <label for="xx6">#displayFieldLabel('email' "$MESSAGES.getString('contact.form.email')")</label>
                        </div>
                        <div class="media__body">
                            <input type="text" id="xx6" name="email" value="#getFieldValue('email')"/>
                        </div>
                    </div>
                    <div class="media">
                        <div class="media__obj media__obj--large media__obj--left">
                            <label for="activity">$MESSAGES.getString('contact.form.activity')</label>
                        </div>
                        <div class="media__body">
                            <select size="1" id="activity" name="activity">
                                <option value="none" #getSelectedFlag('activity' 'none')>---</option>
                                <option value="schul" #getSelectedFlag('activity' 'schul')>$MESSAGES.getString('contact.report.email.area.of.profession.schul')</option>
                                <option value="hand" #getSelectedFlag('activity' 'hand')>$MESSAGES.getString('contact.report.email.area.of.profession.hand')</option>
                                <option value="umwe" #getSelectedFlag('activity' 'umwe')>$MESSAGES.getString('contact.report.email.area.of.profession.umwe')</option>
                                <option value="beho" #getSelectedFlag('activity' 'beho')>$MESSAGES.getString('contact.report.email.area.of.profession.beho')</option>
                                <option value="lehre" #getSelectedFlag('activity' 'lehre')>$MESSAGES.getString('contact.report.email.area.of.profession.lehre')</option>
                                <option value="univ" #getSelectedFlag('activity' 'univ')>$MESSAGES.getString('contact.report.email.area.of.profession.univ')</option>
                                <option value="medi" #getSelectedFlag('activity' 'medi')>$MESSAGES.getString('contact.report.email.area.of.profession.medi')</option>
                                <option value="ande" #getSelectedFlag('activity' 'ande')>$MESSAGES.getString('contact.report.email.area.of.profession.ande')</option>
                            </select>
                        </div>
                    </div>
                    <div class="media">
                        <div class="media__obj media__obj--large media__obj--left">
                            <label for="type_interest">$MESSAGES.getString('contact.form.interest')</label>
                        </div>
                        <div class="media__body">
                            <select size="1" id="type_interest" name="interest">
                                <option value="none" #getSelectedFlag('interest' 'none')>---</option>
                                <option value="prof" #getSelectedFlag('interest' 'prof')>$MESSAGES.getString('contact.report.email.interest.in.enviroment.info.prof')</option>
                                <option value="priv" #getSelectedFlag('interest' 'priv')>$MESSAGES.getString('contact.report.email.interest.in.enviroment.info.priv')</option>
                            </select>
                        </div>
                    </div>
                    #if ($uploadEnable)
                        <div class="media">
                            <div class="media__obj media__obj--large media__obj--left">
                                <label >$MESSAGES.getString('contact.form.upload') $uploadSize MB)</label>
                            </div>
                            <div class="media__body">
                                <input type="file" id="upload" name="upload"></input>
                            </div>
                        </div>
                    #end
                    #if($enableCaptcha)
                        <div class="media">
                            <div class="media__obj media__obj--large media__obj--left">
                                <label ><br></label>
                            </div>
                            <div class="media__body">
                            #if ($actionForm.hasErrors() && !$actionForm.hasErrorInField("jcaptcha"))
                                <image width=210px height=70px class="float_left" src="/ingrid-portal-apps/jcaptcha?keep">
                            #else
                                <image width=210px height=70px class="float_left" src="/ingrid-portal-apps/jcaptcha">
                            #end 
                            </div>
                        </div>
                        <div class="media">
                            <div class="media__obj media__obj--large media__obj--left">
                                <label ><br></label>
                            </div>
                            #renderInputButtonClass($MESSAGES.getString('common.form.button.reload') "font-size:90%;" "doRefresh" $MESSAGES.getString('common.form.button.reload.tooltip') "btn btn--secondary btn--small")
                        </div>
                        $action.setParameter("doRefresh",  "Refresh")
                        <div class="media">
                            <div class="media__obj media__obj--large media__obj--left">
                                <label for="xx7">#displayFieldLabel('jcaptcha' "$MESSAGES.getString('contact.jcaptcha.title')")</label>
                            </div>
                            <div class="media__body">
                                <input type="text" id="xx7" name="jcaptcha" value="#getFieldValue('jcaptcha')"/>
                            </div>
                        </div>
                    #end
                </div>
                <div class="media__obj media__obj--right" style="margin-bottom: 0;">
                    #renderInputButtonClass($MESSAGES.getString('common.form.button.submit') "" "" $MESSAGES.getString('common.form.button.submit.tooltip') "btn btn--secondary btn--small")
                </div>
            </form>
        </article>
    </div>
</section>