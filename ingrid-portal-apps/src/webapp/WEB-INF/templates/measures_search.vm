#set ($MESSAGES = $portletConfig.getResourceBundle($renderRequest.Locale))
#set ($action = $renderResponse.createActionURL())
<form action="$action" method="get" name="measures_search" id="measures_search">
	<div class="formbody">
		<h2 class="nospace">Auswahlkriterien
		</h2>
		#displayFormErrors()    
		<div class="float_left">  
			<h3>#displayFieldLabel('rubric' $MESSAGES.getString('measuresSearch.rubric'))
			</h3>
			<table cellpadding="0" cellspacing="0">
				<tr>
					<td>
						<input id="chk_all" name="rubric" type="checkbox" onclick="ingrid_checkAll(document.measures_search.rubric)" onkeypress="ingrid_checkAll(document.measures_search.rubric)" value="all" #getChecked('rubric' 'all')/> 
						<label for="chk_all">Alle
						</label>
					</td>
					<td>
					</td>
					<td>
					</td>
					<td>
					</td>
				</tr>
				<tr>
					<td>
						<input id="chk_1" name="rubric" type="checkbox" onclick="ingrid_checkGroup(document.measures_search.rubric)" onkeypress="ingrid_checkGroup(document.measures_search.rubric)" value="ground" #getChecked('rubric' 'ground')/> 
						<label for="chk_1">Boden
						</label>
					</td>
					<td>
						<input id="chk_2" name="rubric" type="checkbox" onclick="ingrid_checkGroup(document.measures_search.rubric)" onkeypress="ingrid_checkGroup(document.measures_search.rubric)" value="air" #getChecked('rubric' 'air')/> 
						<label for="chk_2">Luft
						</label>
					</td>
					<td>
						<input id="chk_3" name="rubric" type="checkbox" onclick="ingrid_checkGroup(document.measures_search.rubric)" onkeypress="ingrid_checkGroup(document.measures_search.rubric)" value="water" #getChecked('rubric' 'water')/> 
						<label for="chk_3">Wasser
						</label>
					</td>
					<td>
						<input id="chk_4" name="rubric" type="checkbox" onclick="ingrid_checkGroup(document.measures_search.rubric)" onkeypress="ingrid_checkGroup(document.measures_search.rubric)" value="other" #getChecked('rubric' 'other')/> 
						<label for="chk_4">Weitere
						</label>
					</td>
				</tr>
			</table>  
		</div>  
		<div class="clearer">
		</div>
		<br style="line-height:10px" />
		<div class="float_left">
			<h3>#displayFieldLabel('partner' $MESSAGES.getString('measuresSearch.partner'))
			</h3>
			<select class="spacial_relation inputstyle" name="partner" size="5" multiple="multiple">
				<option value="all" #getSelected('partner' 'all')>------ Alles auswählen ------
				</option>
				<option value="2" #getSelected('partner' '2')>Bund
				</option>
				<option value="3" #getSelected('partner' '3')>Baden-Württemberg
				</option>
				<option value="4" #getSelected('partner' '4')>Bayern
				</option>
				<option value="5" #getSelected('partner' '5')>Berlin
				</option>
				<option value="6" #getSelected('partner' '6')>Brandenburg
				</option>
				<option value="7" #getSelected('partner' '7')>Bremen
				</option>
				<option value="8" #getSelected('partner' '8')>Hamburg
				</option>
				<option value="9" #getSelected('partner' '9')>Hessen
				</option>
				<option value="10" #getSelected('partner' '10')>Mecklenburg-Vorpommern
				</option>
				<option value="11" #getSelected('partner' '11')>Niedersachsen
				</option>
				<option value="12" #getSelected('partner' '12')>Nordrhein-Westfalen
				</option>
				<option value="13" #getSelected('partner' '13')>Rheinland-Pfalz
				</option>
				<option value="14" #getSelected('partner' '14')>Saarland
				</option>
				<option value="15" #getSelected('partner' '15')>Sachsen
				</option>
				<option value="16" #getSelected('partner' '16')>Sachsen-Anhalt
				</option>
				<option value="17" #getSelected('partner' '17')>Schleswig-Holstein
				</option>
				<option value="18" #getSelected('partner' '18')>Thüringen
				</option>
			</select>
		</div>
		<div class="float_left marginleft">
			<h3>#displayFieldLabel('grouping' $MESSAGES.getString('measuresSearch.grouping'))
			</h3>
			<input type="radio" id="grouping_no" name="grouping" value="none" #getChecked('grouping' 'none')/>
			<label class="radiogroup" for="grouping_no">Keine
			</label>
			<br />
			<input type="radio" id="grouping_partner" name="grouping" value="partner" #getChecked('grouping' 'partner')/>
			<label class="radiogroup" for="grouping_partner">Bund/Länder
			</label>
			<br />
			<input type="radio" id="grouping_info" name="grouping" value="info" #getChecked('grouping' 'info')/>
			<label class="radiogroup" for="grouping_info">Informationsanbieter
			</label>
			<br />
		</div>
		<br />
		<span class="clearer">
		</span>
	</div>
	<div class="formfooter">
		<div align="right">
			<input class="btn" type="submit" value="Anzeigen" />
		</div>
	</div>
</form>
