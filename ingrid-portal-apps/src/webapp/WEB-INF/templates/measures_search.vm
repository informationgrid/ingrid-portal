#set ($action = $renderResponse.createActionURL())
<form action="$action" method="get" name="measures_search" id="measures_search">
   	<input type="hidden" name="action" value="doSearch"/>
	<div class="formbody">
		<h2 class="nospace">Auswahlkriterien
		</h2>
		#displayFormErrors()    
		<div class="float_left">  
			<h3>#displayFieldLabel('rubric' $MESSAGES.getString('measuresSearch.rubric'))
			</h3>
			<table cellpadding="0" cellspacing="0">
				<tr>
					<td>
						<input id="chk_all" name="rubric" type="checkbox" onclick="ingrid_checkAll(document.measures_search.rubric)" onkeypress="ingrid_checkAll(document.measures_search.rubric)" value="all" #getChecked('rubric' 'all')/> 
						<label for="chk_all">Alle
						</label>
					</td>
					<td>
					</td>
					<td>
					</td>
					<td>
					</td>
				</tr>
#set ($numRubrics = $rubricList.size())
#foreach ($rubric in $rubricList)
#if($velocityCount==1 || $velocityCount==5 || $velocityCount==9)<tr>#end
					<td>
						<input id="chk_$velocityCount" name="rubric" type="checkbox" onclick="ingrid_checkGroup(document.measures_search.rubric)" onkeypress="ingrid_checkGroup(document.measures_search.rubric)" value="$rubric.FormValue" #getChecked('rubric' "$rubric.FormValue")/> 
						<label for="chk_$velocityCount">$MESSAGES.getString("$rubric.QueryValue")
						</label>
					</td>
#if($velocityCount==$numRubrics || $velocityCount==4 || $velocityCount==8)</tr>#end
#end
			</table>  
		</div>  
		<div class="clearer">
		</div>
		<br style="line-height:10px" />
		<div class="float_left">
			<h3>#displayFieldLabel('partner' $MESSAGES.getString('measuresSearch.partner'))
			</h3>
			<select class="spacial_relation inputstyle" name="partner" size="5" multiple="multiple">
				#displayPartner()
			</select>
		</div>
		<div class="float_left marginleft">
			<h3>#displayFieldLabel('grouping' $MESSAGES.getString('measuresSearch.grouping'))
			</h3>
			<input type="radio" id="grouping_no" name="grouping" value="none" #getChecked('grouping' 'none')/>
			<label class="radiogroup" for="grouping_no">Keine
			</label>
			<br />
			<input type="radio" id="grouping_partner" name="grouping" value="partner" #getChecked('grouping' 'partner')/>
			<label class="radiogroup" for="grouping_partner">Bund/Länder
			</label>
			<br />
			<input type="radio" id="grouping_info" name="grouping" value="provider" #getChecked('grouping' 'info')/>
			<label class="radiogroup" for="grouping_info">Informationsanbieter
			</label>
			<br />
		</div>
		<br />
		<span class="clearer">
		</span>
	</div>
	<div class="formfooter">
		<div align="right">
			<input class="btn" type="submit" value="Anzeigen" />
		</div>
	</div>
</form>
