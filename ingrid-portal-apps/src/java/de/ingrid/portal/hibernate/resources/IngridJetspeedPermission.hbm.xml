<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="de.ingrid.portal.om.IngridJetspeedPermission" table="security_permission">
		<id name="permissionId" column="PERMISSION_ID">
			<generator class="native" />
		</id>

		<property name="className"	column="CLASSNAME"		type="java.lang.String" />
		<property name="name" 	 	column="NAME"			type="java.lang.String" />
		<property name="actions"	column="ACTIONS"		type="java.lang.String" />
	</class>
</hibernate-mapping>