#set($decoration = $f.decoration)
#set($actions = $decoration.actions)
#set($_actions = $layoutDecoration.actions)

<!-- Begin: Fragment: ${f.id} Decoration: ${decoratorId} -->
<div class="portlet">
  <div class="section-header">
    <h1 class="float_left">$!jetspeed.getTitle($jetspeed.getPortletEntity($f), $f)</h1>
    <span class="portlet_info">
	#set($prefs = $f.getPreferences())
	#set($hkey = "")
	#foreach($pref in $prefs)
		#if($pref.getName() == "helpKey")
			#foreach($val in $pref.getValues())
				#set($hkey = $val) 
			#end
		#end
	#end	
	#if($hkey && $hkey != "")
		#set($hpath = "${jetspeed.basePath}/help.psml?hkey=$hkey")
	<script language="JavaScript">
		document.write("<a href=\"javascript:openWindow('$hpath',750,550);\"> ? </a>");
	</script>
	<noscript>
		<a href="$hpath" target="_new"> ? </a>
	</noscript>
	#end
	</span>
    <span class="clearer"></span>
  </div>
    #if (!$jetspeed.isHidden($f) || $jetspeed.WindowState != "minimized")
    $f.renderedContent
    #end
</div>
<!-- END: Fragment: ${f.id} Decoration: ${decoratorId} -->


