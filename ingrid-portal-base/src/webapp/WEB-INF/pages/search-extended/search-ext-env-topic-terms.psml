<page>
  <defaults
     skin="orange"
     layout-decorator="ingrid"
     portlet-decorator="ingrid-teaser"
  />
  <title>Search Extended Environment</title>
  <metadata name="title" xml:lang="de">Erweiterte Suche Umweltinformationen</metadata>

  <fragment id="search-ext-env-topic-terms-page" type="layout" name="jetspeed-layouts::IngridTwoColumns">
    <fragment id="search-simple-portlet" type="portlet" name="ingrid-portal-apps::SearchSimple">
      <property layout="TwoColumns" name="row" value="0"/>
      <property layout="TwoColumns" name="column" value="0"/>
      <preference name="titleKey" readOnly="false">
        <value>searchSimple.title.extended</value>
      </preference>
    </fragment>
    <fragment id="search-ext-env-topic-terms" type="portlet" decorator="clear" name="ingrid-portal-apps::SearchExtEnvTopicTerms">
      <property layout="TwoColumns" name="row" value="1" />
      <property layout="TwoColumns" name="column" value="0" />
    </fragment>
    <fragment id="search-ext-env-topic-terms-info" type="portlet" decorator="ingrid-marginal-teaser" name="ingrid-portal-apps::InfoPortlet">
      <property layout="TwoColumns" name="row" value="0" />
      <property layout="TwoColumns" name="column" value="1" />
      <preference name="infoTemplate" readOnly="false">
        <value>/WEB-INF/templates/search_extended/search_ext_env_topic_terms_info.vm</value>
      </preference>
      <preference name="infoTitleKey" readOnly="false">
        <value>searchExtended.env.topic.terms.info.title</value>
      </preference>
    </fragment>
  </fragment>

  <security-constraints>
    <security-constraints-ref>public-view</security-constraints-ref>
  </security-constraints>
</page>
