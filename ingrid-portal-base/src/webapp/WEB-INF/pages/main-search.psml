<page>
  <defaults
     skin="orange"
     layout-decorator="ingrid"
     portlet-decorator="ingrid-teaser"
  />
  <title>Search</title>
  <metadata name="title" xml:lang="de">Suche</metadata>

  <fragment id="main-search" type="layout" name="jetspeed-layouts::IngridTwoColumns">
    <fragment id="main-search-1" type="portlet" name="ingrid-portal-apps::SimpleSearchTeaser">
      <property layout="TwoColumns" name="row" value="0" />
      <property layout="TwoColumns" name="column" value="0" />
    </fragment>
    <fragment id="main-search-2" type="portlet" decorator="ingrid-marginal-teaser" name="ingrid-portal-apps::InfoPortlet">
      <property layout="TwoColumns" name="row" value="0" />
      <property layout="TwoColumns" name="column" value="1" />
      <preference name="infoTemplate" readOnly="false">
        <value>/WEB-INF/templates/simple_search_info.vm</value>
      </preference>
      <preference name="infoTitleKey" readOnly="false">
        <value>simpleSearch.info.title</value>
      </preference>
    </fragment>
  </fragment>

  <security-constraints>
    <security-constraints-ref>public-view</security-constraints-ref>
  </security-constraints>
</page>
