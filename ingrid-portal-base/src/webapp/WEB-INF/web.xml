      <url-pattern>/login/redirector</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <!-- the required portal user role name defined in: -->
      <!-- /WEB-INF/assembly/security-atn.xml             -->
      <role-name>portal-user</role-name>
    </auth-constraint>
  </security-constraint>

